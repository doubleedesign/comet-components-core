{
    "name": "Group",
    "extends": "LayoutComponent",
    "abstract": false,
    "attributes": {
        "tagName": {
            "type": "Tag",
            "description": "The HTML tag to use for this component",
            "supported": [
                "div",
                "section",
                "article",
                "aside"
            ],
            "default": "div"
        },
        "id": {
            "type": "string",
            "description": "Unique identifier"
        },
        "classes": {
            "type": "array<string>",
            "description": "CSS classes",
            "default": [
                "group"
            ]
        },
        "style": {
            "type": "array",
            "description": "Inline styles"
        },
        "context": {
            "type": "string",
            "description": "The parent component or variant if contextually relevant"
        },
        "backgroundColor": {
            "type": "ThemeColor",
            "description": "Background colour keyword",
            "supported": [
                "primary",
                "secondary",
                "accent",
                "error",
                "success",
                "warning",
                "info",
                "light",
                "dark",
                "white"
            ]
        },
        "hAlign": {
            "type": "Alignment",
            "supported": [
                "start",
                "end",
                "center",
                "justify",
                "match-parent"
            ],
            "default": "start"
        },
        "vAlign": {
            "type": "Alignment",
            "supported": [
                "start",
                "end",
                "center",
                "justify",
                "match-parent"
            ],
            "default": "start"
        }
    },
    "innerComponents": {
        "type": "array<Renderable>",
        "description": "Inner components to be rendered within this component",
        "required": true
    }
}