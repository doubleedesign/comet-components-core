{
    "name": "Container",
    "extends": "UIComponent",
    "abstract": false,
    "attributes": {
        "backgroundColor": {
            "type": "ThemeColor",
            "description": "Background colour keyword",
            "supported": [
                "primary",
                "secondary",
                "accent",
                "error",
                "success",
                "warning",
                "info",
                "light",
                "dark",
                "white"
            ]
        },
        "classes": {
            "type": "array<string>",
            "description": "CSS classes",
            "default": [
                "container"
            ]
        },
        "context": {
            "type": "string",
            "description": "The parent component or variant if contextually relevant"
        },
        "id": {
            "type": "string",
            "description": "Unique identifier"
        },
        "size": {
            "type": "ContainerSize",
            "description": "Keyword specifying the relative width of the container for the inner content",
            "supported": [
                "default",
                "wide",
                "fullwidth",
                "narrow"
            ],
            "default": "default"
        },
        "style": {
            "type": "array",
            "description": "Inline styles"
        },
        "tagName": {
            "type": "Tag",
            "description": "The HTML tag to use for this component",
            "supported": [
                "section",
                "main",
                "div"
            ],
            "default": "section"
        }
    },
    "innerComponents": {
        "type": "array<Renderable>",
        "description": "Inner components to be rendered within this component",
        "required": true
    }
}