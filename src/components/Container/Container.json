{
    "name": "Container",
    "description": "Create a section with semantic meaning that controls the maximum width of its contents.",
    "extends": "LayoutComponent",
    "abstract": false,
    "isInner": false,
    "belongsInside": null,
    "attributes": {
        "backgroundColor": {
            "type": "ThemeColor",
            "description": "Background colour keyword",
            "supported": [
                "primary",
                "secondary",
                "accent",
                "error",
                "success",
                "warning",
                "info",
                "light",
                "dark",
                "white"
            ],
            "inherited": true
        },
        "classes": {
            "type": "array<string>",
            "description": "CSS classes",
            "default": [
                "container",
                "layout-block"
            ],
            "inherited": true
        },
        "context": {
            "type": "string",
            "description": "The kebab-case or BEM name of the parent component or variant if contextually relevant",
            "inherited": true
        },
        "gradient": {
            "type": "string",
            "description": "Name of a gradient to use for the background (requires accompanying CSS to be defined)"
        },
        "hAlign": {
            "type": "Alignment",
            "description": "Horizontal alignment, if applicable",
            "supported": [
                "start",
                "end",
                "center",
                "justify",
                "match-parent"
            ],
            "default": "start",
            "inherited": true
        },
        "id": {
            "type": "string",
            "description": "Unique identifier",
            "inherited": true
        },
        "size": {
            "type": "ContainerSize",
            "description": "Keyword specifying the relative width of the container for the inner content",
            "supported": [
                "default",
                "wide",
                "fullwidth",
                "narrow",
                "narrower",
                "small"
            ],
            "default": "default"
        },
        "style": {
            "type": "array",
            "description": "Inline styles",
            "inherited": true
        },
        "tagName": {
            "type": "Tag",
            "description": "The HTML tag to use for this component",
            "supported": [
                "section",
                "main",
                "div"
            ],
            "default": "section",
            "inherited": true
        },
        "testId": {
            "type": "string",
            "description": "Optionally add a data-testid attribute for automated tests",
            "inherited": true
        },
        "vAlign": {
            "type": "Alignment",
            "description": "Vertical alignment, if applicable",
            "supported": [
                "start",
                "end",
                "center",
                "justify",
                "match-parent"
            ],
            "default": "start",
            "inherited": true
        },
        "withWrapper": {
            "type": "bool",
            "description": "Whether to wrap the container element so that the background is full-width",
            "default": "true"
        }
    },
    "innerComponents": {
        "type": "array<Renderable>",
        "description": "Inner components to be rendered within this component",
        "required": true,
        "inherited": true
    }
}