{
    "name": "Gallery",
    "extends": "UIComponent",
    "abstract": false,
    "isInner": false,
    "attributes": {
        "caption": {
            "type": "string",
            "description": "Caption describing the whole gallery; supports inline phrasing HTML tags such as <em> and <strong>"
        },
        "classes": {
            "type": "array<string>",
            "description": "CSS classes",
            "default": [
                "gallery"
            ],
            "inherited": true
        },
        "columns": {
            "type": "int",
            "description": "The number of columns to use for the layout (may be overridden to fewer in small containers/viewports)",
            "required": true,
            "supported": [
                "1",
                "2",
                "3",
                "4",
                "5",
                "6",
                "7",
                "8"
            ],
            "default": 3
        },
        "context": {
            "type": "string",
            "description": "The kebab-case or BEM name of the parent component or variant if contextually relevant",
            "inherited": true
        },
        "id": {
            "type": "string",
            "description": "Unique identifier",
            "inherited": true
        },
        "style": {
            "type": "array",
            "description": "Inline styles",
            "inherited": true
        },
        "tagName": {
            "type": "Tag",
            "description": "The HTML tag to use for this component",
            "supported": [
                "figure",
                "div"
            ],
            "default": "figure",
            "inherited": true
        },
        "testId": {
            "type": "string",
            "description": "Optionally add a data-testid attribute for automated tests",
            "inherited": true
        }
    },
    "innerComponents": {
        "type": "array<Image>",
        "description": "The image components to display in the gallery",
        "required": true
    }
}