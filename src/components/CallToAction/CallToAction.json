{
    "name": "CallToAction",
    "extends": "UIComponent",
    "attributes": {
        "backgroundColor": {
            "type": "ThemeColor",
            "supported": [
                "primary",
                "secondary",
                "accent",
                "error",
                "success",
                "warning",
                "info",
                "light",
                "dark",
                "white"
            ]
        },
        "tagName": {
            "type": "Tag",
            "description": "The HTML tag to use for this component",
            "supported": [
                "div",
                "section",
                "aside"
            ],
            "default": "div"
        },
        "id": {
            "type": "string",
            "description": "Unique identifier"
        },
        "classes": {
            "type": "array<string>",
            "description": "CSS classes",
            "default": [
                "call-to-action"
            ]
        },
        "style": {
            "type": "array",
            "description": "Inline styles"
        },
        "context": {
            "type": "string",
            "description": "The parent component or variant if contextually relevant"
        }
    },
    "innerComponents": {
        "type": "array<Heading|Paragraph|ButtonGroup>",
        "description": "Inner components to be rendered within this component",
        "required": true
    }
}