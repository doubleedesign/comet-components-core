{
    "name": "Heading",
    "extends": "TextElementExtended",
    "abstract": false,
    "isInner": false,
    "attributes": {
        "classes": {
            "type": "array<string>",
            "description": "CSS classes",
            "supported": [
                "is-style-accent",
                "is-style-small"
            ],
            "default": []
        },
        "context": {
            "type": "string",
            "description": "The kebab-case or BEM name of the parent component or variant if contextually relevant",
            "inherited": true
        },
        "id": {
            "type": "string",
            "description": "Unique identifier",
            "inherited": true
        },
        "style": {
            "type": "array",
            "description": "Inline styles",
            "inherited": true
        },
        "tagName": {
            "type": "Tag",
            "description": "The HTML tag to use for this component",
            "supported": [
                "h1",
                "h2",
                "h3",
                "h4",
                "h5",
                "h6"
            ],
            "default": "h2",
            "inherited": true
        },
        "testId": {
            "type": "string",
            "description": "Optionally add a data-testid attribute for automated tests",
            "inherited": true
        },
        "textAlign": {
            "type": "Alignment",
            "supported": [
                "start",
                "end",
                "center",
                "justify",
                "match-parent"
            ],
            "inherited": true
        },
        "textColor": {
            "type": "ThemeColor",
            "supported": [
                "primary",
                "secondary",
                "accent",
                "error",
                "success",
                "warning",
                "info",
                "light",
                "dark",
                "white"
            ],
            "inherited": true
        }
    },
    "content": {
        "type": "string",
        "description": "Plain text or basic HTML",
        "required": true,
        "inherited": true
    }
}