{
    "name": "Heading",
    "extends": "TextElementExtended",
    "abstract": false,
    "attributes": {
        "classes": {
            "type": "array<string>",
            "description": "CSS classes",
            "supported": [
                "is-style-accent",
                "is-style-small"
            ],
            "default": []
        },
        "context": {
            "type": "string",
            "description": "The parent component or variant if contextually relevant"
        },
        "id": {
            "type": "string",
            "description": "Unique identifier"
        },
        "style": {
            "type": "array",
            "description": "Inline styles"
        },
        "tagName": {
            "type": "Tag",
            "description": "The HTML tag to use for this component",
            "supported": [
                "h1",
                "h2",
                "h3",
                "h4",
                "h5",
                "h6"
            ],
            "default": "h2"
        },
        "textAlign": {
            "type": "Alignment",
            "supported": [
                "start",
                "end",
                "center",
                "justify",
                "match-parent"
            ],
            "default": "match-parent"
        },
        "textColor": {
            "type": "ThemeColor",
            "supported": [
                "primary",
                "secondary",
                "accent",
                "error",
                "success",
                "warning",
                "info",
                "light",
                "dark",
                "white"
            ]
        }
    },
    "content": {
        "type": "string",
        "description": "Plain text or basic HTML",
        "required": true
    }
}