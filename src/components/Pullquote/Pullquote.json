{
    "name": "Pullquote",
    "description": "Feature a quote or excerpt, with an optional citation.",
    "extends": "TextElementExtended",
    "abstract": false,
    "isInner": false,
    "belongsInside": "LayoutComponent",
    "attributes": {
        "citation": {
            "type": "string",
            "description": "Optional citation for the quote"
        },
        "classes": {
            "type": "array<string>",
            "description": "CSS classes",
            "default": {
                "1": "pullquote"
            },
            "inherited": true
        },
        "colorTheme": {
            "type": "ThemeColor",
            "description": "Colour keyword for the fill or outline colour",
            "supported": [
                "primary",
                "secondary",
                "accent",
                "error",
                "success",
                "warning",
                "info",
                "light",
                "dark",
                "white"
            ]
        },
        "context": {
            "type": "string",
            "description": "The kebab-case or BEM name of the parent component or variant if contextually relevant",
            "inherited": true
        },
        "id": {
            "type": "string",
            "description": "Unique identifier",
            "inherited": true
        },
        "style": {
            "type": "array",
            "description": "Inline styles",
            "inherited": true
        },
        "tagName": {
            "type": "Tag",
            "description": "The HTML tag to use for this component",
            "supported": [
                "blockquote"
            ],
            "default": "blockquote",
            "inherited": true
        },
        "testId": {
            "type": "string",
            "description": "Optionally add a data-testid attribute for automated tests",
            "inherited": true
        },
        "textAlign": {
            "type": "Alignment",
            "supported": [
                "start",
                "end",
                "center",
                "justify",
                "match-parent"
            ],
            "inherited": true
        },
        "textColor": {
            "type": "ThemeColor",
            "supported": [
                "primary",
                "secondary",
                "accent",
                "error",
                "success",
                "warning",
                "info",
                "light",
                "dark",
                "white"
            ],
            "inherited": true
        }
    },
    "content": {
        "type": "string",
        "description": "Plain text or basic HTML",
        "required": true,
        "inherited": true
    }
}