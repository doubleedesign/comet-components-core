{
    "name": "Details",
    "description": "A component that renders a single expandable/collapsible panel.",
    "extends": "UIComponent",
    "abstract": false,
    "isInner": false,
    "belongsInside": "LayoutComponent",
    "attributes": {
        "classes": {
            "type": "array<string>",
            "description": "CSS classes",
            "default": [
                "details"
            ],
            "inherited": true
        },
        "context": {
            "type": "string",
            "description": "The kebab-case or BEM name of the parent component or variant if contextually relevant",
            "inherited": true
        },
        "id": {
            "type": "string",
            "description": "Unique identifier",
            "inherited": true
        },
        "style": {
            "type": "array",
            "description": "Inline styles",
            "inherited": true
        },
        "summary": {
            "type": "string",
            "description": "The title of the panel, summarising the content.",
            "required": true
        },
        "tagName": {
            "type": "Tag",
            "description": "The HTML tag to use for this component",
            "supported": [
                "details"
            ],
            "default": "details",
            "inherited": true
        },
        "testId": {
            "type": "string",
            "description": "Optionally add a data-testid attribute for automated tests",
            "inherited": true
        }
    },
    "innerComponents": {
        "type": "array<Renderable>",
        "description": "Inner components to be rendered within this component",
        "required": true,
        "inherited": true
    }
}