{
    "name": "ContentWrapper",
    "description": null,
    "extends": "LayoutComponent",
    "abstract": false,
    "isInner": true,
    "belongsInside": "ImageAndText",
    "attributes": {
        "backgroundColor": {
            "type": "ThemeColor",
            "description": "Background colour keyword",
            "supported": [
                "primary",
                "secondary",
                "accent",
                "error",
                "success",
                "warning",
                "info",
                "light",
                "dark",
                "white"
            ],
            "inherited": true
        },
        "classes": {
            "type": "array<string>",
            "description": "CSS classes",
            "default": [
                "image-and-text__content"
            ],
            "inherited": true
        },
        "context": {
            "type": "string",
            "description": "The kebab-case or BEM name of the parent component or variant if contextually relevant. May be automatically set by parent component(s).",
            "inherited": true
        },
        "hAlign": {
            "type": "Alignment",
            "description": "Horizontal alignment, if applicable",
            "supported": [
                "start",
                "end",
                "center",
                "justify",
                "match-parent"
            ],
            "default": "start",
            "inherited": true
        },
        "id": {
            "type": "string",
            "description": "Unique identifier",
            "inherited": true
        },
        "maxWidth": {
            "type": "float",
            "required": true,
            "default": 50
        },
        "overlayAmount": {
            "type": "float",
            "required": true,
            "default": 0
        },
        "style": {
            "type": "array",
            "description": "Inline styles",
            "inherited": true
        },
        "tagName": {
            "type": "Tag",
            "description": "The HTML tag to use for this component",
            "supported": [
                "div"
            ],
            "default": "div",
            "inherited": true
        },
        "testId": {
            "type": "string",
            "description": "Optionally add a data-testid attribute for automated tests",
            "inherited": true
        },
        "vAlign": {
            "type": "Alignment",
            "description": "Vertical alignment, if applicable",
            "supported": [
                "start",
                "end",
                "center",
                "justify",
                "match-parent"
            ],
            "default": "start",
            "inherited": true
        }
    },
    "innerComponents": {
        "type": "array<Renderable>",
        "description": "Inner components to be rendered within this component",
        "required": true,
        "inherited": true
    }
}
