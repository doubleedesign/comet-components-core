{
    "name": "ResponsivePanels",
    "extends": "UIComponent",
    "abstract": false,
    "vue": true,
    "attributes": {
        "breakpoint": {
            "type": "string",
            "description": "The container breakpoint at which to switch between accordion and tabs",
            "required": true
        },
        "classes": {
            "type": "array<string>",
            "description": "CSS classes",
            "default": [
                "responsive-panels"
            ],
            "inherited": true
        },
        "colorTheme": {
            "type": "ThemeColor",
            "description": "Colour keyword for the fill or outline colour",
            "supported": [
                "primary",
                "secondary",
                "accent",
                "error",
                "success",
                "warning",
                "info",
                "light",
                "dark",
                "white"
            ]
        },
        "context": {
            "type": "string",
            "description": "The kebab-case or BEM name of the parent component or variant if contextually relevant",
            "inherited": true
        },
        "id": {
            "type": "string",
            "description": "Unique identifier",
            "inherited": true
        },
        "orientation": {
            "type": "Orientation",
            "supported": [
                "horizontal",
                "vertical"
            ],
            "default": "vertical"
        },
        "style": {
            "type": "array",
            "description": "Inline styles",
            "inherited": true
        },
        "tagName": {
            "type": "Tag",
            "description": "The HTML tag to use for this component",
            "supported": [
                "div"
            ],
            "default": "div",
            "inherited": true
        },
        "testId": {
            "type": "string",
            "description": "Optionally add a data-testid attribute for automated tests",
            "inherited": true
        }
    },
    "innerComponents": {
        "type": "array<ResponsivePanel>",
        "description": "Inner components to be rendered within this component",
        "required": true
    }
}