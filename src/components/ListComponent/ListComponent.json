{
    "name": "ListComponent",
    "extends": "UIComponent",
    "abstract": false,
    "attributes": {
        "classes": {
            "type": "array<string>",
            "description": "CSS classes",
            "default": []
        },
        "context": {
            "type": "string",
            "description": "The parent component or variant if contextually relevant"
        },
        "id": {
            "type": "string",
            "description": "Unique identifier"
        },
        "style": {
            "type": "array",
            "description": "Inline styles"
        },
        "tagName": {
            "type": "Tag",
            "description": "The HTML tag to use for this component",
            "supported": [
                "ul",
                "ol"
            ],
            "default": "ul"
        }
    },
    "innerComponents": {
        "type": "array<ListItem>",
        "description": "List item objects to render inside this list",
        "required": true
    }
}