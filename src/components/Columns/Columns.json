				"start",
				"end",
				"center",
				"justify",
				"match-parent"
			],
			"default": "start"
		},
		"vAlign": {
			"type": "Alignment",
			"supported": [
				"start",
				"end",
				"center",
				"justify",
				"match-parent"
			],
			"default": "start"
		},
		"backgroundColor": {
			"type": "ThemeColor",
			"supported": [
				"primary",
				"secondary",
				"accent",
				"error",
				"success",
				"warning",
				"info",
				"light",
				"dark",
				"white"
			]
		},
		"tagName": {
