{
    "name": "Columns",
    "extends": "LayoutComponent",
    "abstract": false,
    "attributes": {
        "allowStacking": {
            "type": "bool",
            "description": "Whether to adapt the layout by stacking columns when the viewport or container is narrow",
            "required": true,
            "default": "true"
        },
        "backgroundColor": {
            "type": "ThemeColor",
            "description": "Background colour keyword",
            "supported": [
                "primary",
                "secondary",
                "accent",
                "error",
                "success",
                "warning",
                "info",
                "light",
                "dark",
                "white"
            ],
            "inherited": true
        },
        "classes": {
            "type": "array<string>",
            "description": "CSS classes",
            "default": [
                "columns"
            ],
            "inherited": true
        },
        "context": {
            "type": "string",
            "description": "The kebab-case or BEM name of the parent component or variant if contextually relevant",
            "inherited": true
        },
        "hAlign": {
            "type": "Alignment",
            "supported": [
                "start",
                "end",
                "center",
                "justify",
                "match-parent"
            ],
            "default": "start",
            "inherited": true
        },
        "id": {
            "type": "string",
            "description": "Unique identifier",
            "inherited": true
        },
        "style": {
            "type": "array",
            "description": "Inline styles",
            "inherited": true
        },
        "tagName": {
            "type": "Tag",
            "description": "The HTML tag to use for this component",
            "supported": [
                "div",
                "section"
            ],
            "default": "div",
            "inherited": true
        },
        "vAlign": {
            "type": "Alignment",
            "supported": [
                "start",
                "end",
                "center",
                "justify",
                "match-parent"
            ],
            "default": "start",
            "inherited": true
        }
    },
    "innerComponents": {
        "type": "array<Column>",
        "description": "Inner column components",
        "required": true
    }
}