{
	"name": "Column",
	"extends": "LayoutComponent",
	"abstract": false,
	"attributes": {
		"backgroundColor": {
			"type": "ThemeColor",
			"description": "Background colour keyword",
			"supported": [
				"primary",
				"secondary",
				"accent",
				"error",
				"success",
				"warning",
				"info",
				"light",
				"dark",
				"white"
			],
			"inherited": true
		},
		"classes": {
			"type": "array<string>",
			"description": "CSS classes",
			"default": [
				"columns__column"
			],
			"inherited": true
		},
		"context": {
			"type": "string",
			"description": "The parent component or variant if contextually relevant",
			"inherited": true
		},
		"hAlign": {
			"type": "Alignment",
			"supported": [
				"start",
				"end",
				"center",
				"justify",
				"match-parent"
			],
			"default": "start",
			"inherited": true
		},
		"id": {
			"type": "string",
			"description": "Unique identifier",
			"inherited": true
		},
		"style": {
			"type": "array",
			"description": "Inline styles",
			"inherited": true
		},
		"tagName": {
			"type": "Tag",
			"description": "The HTML tag to use for this component",
			"supported": [
				"div"
			],
			"default": "div",
			"inherited": true
		},
		"vAlign": {
			"type": "Alignment",
			"supported": [
				"start",
				"end",
				"center",
				"justify",
				"match-parent"
			],
			"default": "start",
			"inherited": true
		}
	},
	"innerComponents": {
		"type": "array<Renderable>",
		"description": "Inner components to be rendered within this component",
		"required": true,
		"inherited": true
	}
}
