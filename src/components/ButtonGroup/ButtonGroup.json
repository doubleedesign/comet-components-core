{
    "name": "ButtonGroup",
    "extends": "UIComponent",
    "attributes": {
        "hAlign": {
            "type": "Alignment",
            "supported": [
                "start",
                "end",
                "center",
                "justify",
                "match-parent"
            ],
            "default": "start"
        },
        "orientation": {
            "type": "Orientation",
            "supported": [
                "horizontal",
                "vertical"
            ],
            "default": "horizontal"
        },
        "tagName": {
            "type": "Tag",
            "description": "The HTML tag to use for this component",
            "supported": [
                "div"
            ],
            "default": "div"
        },
        "id": {
            "type": "string",
            "description": "Unique identifier"
        },
        "classes": {
            "type": "array<string>",
            "description": "CSS classes",
            "default": [
                "button-group"
            ]
        },
        "style": {
            "type": "array",
            "description": "Inline styles"
        },
        "context": {
            "type": "string",
            "description": "The parent component or variant if contextually relevant"
        }
    },
    "innerComponents": {
        "type": "array<Button>",
        "description": "Button objects to render inside the ButtonGroup",
        "required": true
    }
}