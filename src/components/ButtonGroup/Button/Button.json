{
	"name": "Button",
	"extends": "Renderable",
	"attributes": {
		"tagName": {
			"type": "Tag",
			"description": "The HTML tag to use for the component",
			"supported": [
				"a",
				"button"
			],
			"default": "a"
		},
		"colorTheme": {
			"type": "ThemeColor",
			"description": "Colour keyword for the fill or outline colour",
			"supported": [
				"primary",
				"secondary",
				"accent",
				"error",
				"success",
				"warning",
				"info",
				"light",
				"dark",
				"white"
			],
			"default": "primary"
		},
		"isOutline": {
			"type": "bool",
			"description": "Whether to use outline style instead of solid/filled",
			"default": "false"
		},
		"id": {
			"type": "string",
			"description": "Unique identifier"
		},
		"classes": {
			"type": "array<string>",
			"description": "CSS classes",
			"default": [
				"button",
				"button--primary"
			]
		},
		"style": {
			"type": "array",
			"description": "Inline styles"
		},
		"context": {
			"type": "string",
			"description": "The parent component or variant if contextually relevant"
		}
	},
	"content": {
		"type": "string",
		"description": "Plain text or basic HTML",
		"required": true
	}
}
