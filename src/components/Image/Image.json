{
	"name": "Image",
	"attributes": {
		"src": {
			"type": "string",
			"description": "Image source URL",
			"required": true
		},
		"classes": {
			"type": "array<string>",
			"description": "CSS classes",
			"supported": [
				"is-style-rounded"
			],
			"default": []
		},
		"alt": {
			"type": "string",
			"description": "Alternative text",
			"required": true,
			"default": ""
		},
		"title": {
			"type": "string",
			"description": "Optional image title (appears on hover)"
		},
		"caption": {
			"type": "string",
			"description": "Optional image caption (to appear below the image)"
		},
		"aspectRatio": {
			"type": "AspectRatio",
			"description": "Crop image to the given aspect ratio",
			"supported": [
				"4:3",
				"3:4",
				"1:1",
				"16:9",
				"9:16",
				"3:2",
				"2:3"
			]
		},
		"scale": {
			"type": "string",
			"description": "How to handle image scaling",
			"supported": [
				"contain",
				"cover"
			],
			"default": "contain"
		},
		"href": {
			"type": "string",
			"description": "URL to link to"
		},
		"height": {
			"type": "string",
			"description": "Set a fixed height for the image"
		},
		"width": {
			"type": "string",
			"description": "Set a fixed width for the image"
		},
		"id": {
			"type": "string",
			"description": "Unique identifier"
		},
		"style": {
			"type": "string",
			"description": "Inline styles"
		}
	}
}
