{
    "name": "Image",
    "description": "Render an image with optional caption, link, and display options such as aspect ratio and behaviour within its container.",
    "extends": "Renderable",
    "abstract": false,
    "isInner": false,
    "belongsInside": "LayoutComponent",
    "attributes": {
        "align": {
            "type": "string",
            "description": "Image alignment",
            "supported": [
                "left",
                "center",
                "right",
                "full"
            ]
        },
        "alt": {
            "type": "string",
            "description": "Alternative text",
            "required": true,
            "default": ""
        },
        "aspectRatio": {
            "type": "AspectRatio",
            "description": "Crop image to the given aspect ratio",
            "supported": [
                "4:3",
                "3:4",
                "1:1",
                "16:9",
                "9:16",
                "3:2",
                "2:3"
            ]
        },
        "caption": {
            "type": "string",
            "description": "Optional image caption (to appear below the image)"
        },
        "classes": {
            "type": "array<string>",
            "description": "CSS classes",
            "supported": [
                "is-style-rounded"
            ],
            "default": [
                "image"
            ]
        },
        "context": {
            "type": "string",
            "description": "The kebab-case or BEM name of the parent component or variant if contextually relevant",
            "inherited": true
        },
        "height": {
            "type": "string",
            "description": "Set a fixed height for the image"
        },
        "href": {
            "type": "string",
            "description": "URL to link to"
        },
        "id": {
            "type": "string",
            "description": "Unique identifier",
            "inherited": true
        },
        "isParallax": {
            "type": "bool",
            "description": "In relevant contexts, whether the image should be used to achieve a parallax effect (requires CSS to actually execute)",
            "required": true,
            "default": "false"
        },
        "scale": {
            "type": "string",
            "description": "How to handle how the image fits the available space",
            "supported": [
                "contain",
                "cover"
            ],
            "default": "contain"
        },
        "src": {
            "type": "string",
            "description": "Image source URL",
            "required": true
        },
        "style": {
            "type": "array",
            "description": "Inline styles",
            "inherited": true
        },
        "tagName": {
            "type": "Tag",
            "description": "The HTML tag to use for this component",
            "supported": [
                "figure"
            ],
            "default": "figure",
            "inherited": true
        },
        "testId": {
            "type": "string",
            "description": "Optionally add a data-testid attribute for automated tests",
            "inherited": true
        },
        "title": {
            "type": "string",
            "description": "Optional image title (appears on hover)"
        },
        "width": {
            "type": "string",
            "description": "Set a fixed width for the image"
        }
    }
}