{
    "name": "AccordionPanel",
    "extends": "UIComponent",
    "abstract": false,
    "attributes": {
        "classes": {
            "type": "array<string>",
            "description": "CSS classes",
            "default": [
                "accordion__panel"
            ]
        },
        "context": {
            "type": "string",
            "description": "The parent component or variant if contextually relevant"
        },
        "id": {
            "type": "string",
            "description": "Unique identifier"
        },
        "style": {
            "type": "array",
            "description": "Inline styles"
        },
        "tagName": {
            "type": "Tag",
            "description": "The HTML tag to use for this component",
            "supported": [
                "details"
            ],
            "default": "details"
        }
    },
    "innerComponents": {
        "type": "array<AccordionPanelTitle|AccordionPanelContent>",
        "description": "Inner components to be rendered within this component",
        "required": true
    }
}