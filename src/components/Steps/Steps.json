{
    "name": "Steps",
    "description": "Feature a series of steps in a horizontal or vertical orientation.",
    "extends": "LayoutComponent",
    "abstract": false,
    "isInner": false,
    "belongsInside": "LayoutComponent",
    "attributes": {
        "backgroundColor": {
            "type": "ThemeColor",
            "description": "Background colour keyword",
            "supported": [
                "primary",
                "secondary",
                "accent",
                "error",
                "success",
                "warning",
                "info",
                "light",
                "dark",
                "white"
            ],
            "inherited": true
        },
        "classes": {
            "type": "array<string>",
            "description": "CSS classes",
            "supported": [
                "is-style-numbered",
                "is-style-simple"
            ],
            "default": [
                "steps"
            ]
        },
        "colorTheme": {
            "type": "ThemeColor",
            "description": "Colour keyword for the fill or outline colour",
            "supported": [
                "primary",
                "secondary",
                "accent",
                "error",
                "success",
                "warning",
                "info",
                "light",
                "dark",
                "white"
            ]
        },
        "context": {
            "type": "string",
            "description": "The kebab-case or BEM name of the parent component or variant if contextually relevant",
            "inherited": true
        },
        "hAlign": {
            "type": "Alignment",
            "supported": [
                "start",
                "end",
                "center",
                "justify",
                "match-parent"
            ],
            "default": "start",
            "inherited": true
        },
        "id": {
            "type": "string",
            "description": "Unique identifier",
            "inherited": true
        },
        "maxPerRow": {
            "type": "int",
            "description": "The maximum number of steps to display per row when orientation is horizontal"
        },
        "orientation": {
            "type": "Orientation",
            "supported": [
                "horizontal",
                "vertical"
            ],
            "default": "vertical"
        },
        "style": {
            "type": "array",
            "description": "Inline styles",
            "inherited": true
        },
        "tagName": {
            "type": "Tag",
            "description": "The HTML tag to use for this component",
            "supported": [
                "ol"
            ],
            "default": "ol",
            "inherited": true
        },
        "testId": {
            "type": "string",
            "description": "Optionally add a data-testid attribute for automated tests",
            "inherited": true
        },
        "vAlign": {
            "type": "Alignment",
            "supported": [
                "start",
                "end",
                "center",
                "justify",
                "match-parent"
            ],
            "default": "start",
            "inherited": true
        }
    },
    "innerComponents": {
        "type": "array<Step>",
        "description": "Inner components to be rendered within this component",
        "required": true
    }
}