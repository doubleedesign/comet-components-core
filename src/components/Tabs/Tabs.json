{
    "name": "Tabs",
    "extends": "UIComponent",
    "attributes": {
        "orientation": {
            "type": "Orientation",
            "supported": [
                "horizontal",
                "vertical"
            ],
            "default": "horizontal"
        },
        "tagName": {
            "type": "Tag",
            "description": "The HTML tag to use for this component",
            "supported": [
                "div"
            ],
            "default": "div"
        },
        "id": {
            "type": "string",
            "description": "Unique identifier"
        },
        "classes": {
            "type": "array<string>",
            "description": "CSS classes",
            "default": [
                "tabs"
            ]
        },
        "style": {
            "type": "array",
            "description": "Inline styles"
        },
        "context": {
            "type": "string",
            "description": "The parent component or variant if contextually relevant"
        }
    },
    "innerComponents": {
        "type": "array<TabPanel>",
        "description": "Wrapping components each containing a TabPanelTitle and TabPanelContent.",
        "required": true
    }
}