{
    "name": "IconWithText",
    "extends": "UIComponent",
    "abstract": false,
    "attributes": {
        "classes": {
            "type": "array<string>",
            "description": "CSS classes",
            "default": [
                "icon-with-text"
            ],
            "inherited": true
        },
        "colorTheme": {
            "type": "ThemeColor",
            "description": "Colour keyword for the fill or outline colour",
            "supported": [
                "primary",
                "secondary",
                "accent",
                "error",
                "success",
                "warning",
                "info",
                "light",
                "dark",
                "white"
            ],
            "default": "primary"
        },
        "context": {
            "type": "string",
            "description": "The parent component or variant if contextually relevant",
            "inherited": true
        },
        "icon": {
            "type": "string",
            "description": "Icon class name; if not set, defaults to one matching the colour theme"
        },
        "iconPrefix": {
            "type": "string",
            "description": "Icon prefix class name",
            "required": true,
            "default": "fa-duotone fa-solid"
        },
        "id": {
            "type": "string",
            "description": "Unique identifier",
            "inherited": true
        },
        "label": {
            "type": "string"
        },
        "style": {
            "type": "array",
            "description": "Inline styles",
            "inherited": true
        },
        "tagName": {
            "type": "Tag",
            "description": "The HTML tag to use for this component",
            "supported": [
                "div"
            ],
            "default": "div",
            "inherited": true
        }
    },
    "content": {
        "type": "string",
        "required": true
    },
    "innerComponents": {
        "type": "array<Renderable>",
        "description": "Inner components to be rendered within this component",
        "required": true,
        "inherited": true
    }
}