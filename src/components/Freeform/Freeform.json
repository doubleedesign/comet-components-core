{
    "name": "Freeform",
    "extends": "Renderable",
    "abstract": false,
    "attributes": {
        "classes": {
            "type": "array<string>",
            "description": "CSS classes",
            "default": [
                "freeform"
            ]
        },
        "context": {
            "type": "string",
            "description": "The parent component or variant if contextually relevant"
        },
        "id": {
            "type": "string",
            "description": "Unique identifier"
        },
        "style": {
            "type": "array",
            "description": "Inline styles"
        },
        "tagName": {
            "type": "Tag",
            "description": "The HTML tag to use for this component",
            "supported": [
                "div"
            ],
            "default": "div"
        }
    },
    "content": {
        "type": "string",
        "description": "HTML content from TinyMCE editor or similar",
        "required": true
    }
}