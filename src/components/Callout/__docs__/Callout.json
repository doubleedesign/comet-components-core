{
    "name": "Callout",
    "description": "Highlight an important message in a callout box.",
    "extends": "UIComponent",
    "abstract": false,
    "isInner": false,
    "belongsInside": "LayoutComponent",
    "attributes": {
        "classes": {
            "type": "array<string>",
            "description": "CSS classes",
            "default": [
                "callout",
                "callout--info"
            ],
            "inherited": true
        },
        "colorTheme": {
            "type": "ThemeColor",
            "description": "Colour keyword for the fill or outline colour",
            "supported": [
                "primary",
                "secondary",
                "accent",
                "error",
                "success",
                "warning",
                "info",
                "light",
                "dark",
                "white"
            ],
            "default": "info"
        },
        "context": {
            "type": "string",
            "description": "The kebab-case or BEM name of the parent component or variant if contextually relevant. May be automatically set by parent component(s).",
            "inherited": true
        },
        "icon": {
            "type": "string",
            "description": "Icon class name; default value set for success, warning, error, and info color themes"
        },
        "iconPrefix": {
            "type": "string",
            "description": "Icon prefix class name",
            "default": "fa-solid"
        },
        "id": {
            "type": "string",
            "description": "Unique identifier",
            "inherited": true
        },
        "style": {
            "type": "array",
            "description": "Inline styles",
            "inherited": true
        },
        "tagName": {
            "type": "Tag",
            "description": "The HTML tag to use for this component",
            "supported": [
                "div"
            ],
            "default": "div",
            "inherited": true
        },
        "testId": {
            "type": "string",
            "description": "Optionally add a data-testid attribute for automated tests",
            "inherited": true
        }
    },
    "innerComponents": {
        "type": "array<Heading|ListComponent|Paragraph|ButtonGroup|Button|Separator>",
        "description": "Inner components to be rendered within this component",
        "required": true
    }
}
