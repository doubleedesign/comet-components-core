{
    "name": "TextElement",
    "extends": "Renderable",
    "abstract": true,
    "attributes": {
        "textAlign": {
            "type": "Alignment",
            "supported": [
                "start",
                "end",
                "center",
                "justify",
                "match-parent"
            ],
            "default": "match-parent"
        },
        "tagName": {
            "type": "Tag",
            "description": "The HTML tag to use for the component",
            "supported": [
                "h1",
                "h2",
                "h3",
                "h4",
                "h5",
                "h6",
                "p",
                "li",
                "button",
                "summary",
                "span",
                "em",
                "strong",
                "a",
                "i",
                "mark",
                "cite",
                "s",
                "sup",
                "sub",
                "button",
                "img",
                "wbr",
                "time",
                "code",
                "kbd",
                "bdi",
                "bdo"
            ],
            "default": "div"
        },
        "id": {
            "type": "string",
            "description": "Unique identifier"
        },
        "classes": {
            "type": "array<string>",
            "description": "CSS classes",
            "default": []
        },
        "style": {
            "type": "array",
            "description": "Inline styles"
        },
        "context": {
            "type": "string",
            "description": "The parent component or variant if contextually relevant"
        }
    },
    "content": {
        "type": "string",
        "description": "Plain text or basic HTML",
        "required": true
    }
}