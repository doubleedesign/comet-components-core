{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"types": [
			"jest",
			"node",
			"@testing-library/jest-dom",
			"vue",
		],
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"allowJs": true,
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/**/*.test.ts",
	],
	"exclude": [
		"node_modules"
	]
}
